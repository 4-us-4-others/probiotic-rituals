{
  "name": "probiotic-rituals",
  "version": "0.1.0",
  "description": "probiotic rituals",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "engines": {
    "node": "10.x",
    "npm": "6.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4-us-4-others/probiotic-rituals/"
  },
  "author": "4 us & 4 others",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/4-us-4-others/probiotic-rituals/issues"
  },
  "homepage": "https://github.com/4-us-4-others/probiotic-rituals#readme",
  "dependencies": {
    "airtable": "^0.8.1",
    "are.na": "^0.1.4",
    "compression": "^1.7.4",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "heroku-ssl-redirect": "0.0.4",
    "js-yaml": "^3.14.0",
    "mustache": "^4.0.1",
    "mustache-express": "^1.3.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "grunt": "^1.1.0",
    "grunt-concurrent": "^3.0.0",
    "grunt-contrib-compass": "^1.1.1",
    "grunt-contrib-uglify-es": "^3.3.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-nodemon": "^0.4.2",
    "prettier": "2.0.5"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,html,env"
  },
  "prettier": {
    "printWidth": 160,
    "tabWidth": 4,
    "useTabs": true,
    "semi": false,
    "bracketSpacing": true,
    "overrides": [
      {
        "files": ["index.js", "*.js"],
        "options": {
          "tabWidth": 2,
          "useTabs": false,
          "semi": false,
          "singleQuote": true
        }
      },
      {
        "files": ["*.html"],
        "options": {
          "parser": "html",
          "htmlWhitespaceSensitivity": "strict"
        }
      },
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2,
          "useTabs": false,
          "parser": "json"
        }
      }
    ]
  },
  "prettierIgnore": ["js/vendor*", "*.min.js", "*.css", "assets*", "fonts*"],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true,
      "browser": true,
      "jquery": true
    },
    "extends": ["eslint:recommended", "airbnb-base", "prettier"],
    "plugins": ["prettier"],
    "rules": {
      "func-names": "off",
      "no-console": "warn",
      "prefer-destructuring": "off",
      "array-bracket-spacing": [
        0,
        "always",
        {
          "objectsInArrays": false
        }
      ],
      "object-curly-spacing": ["warn", "always"],
      "prettier/prettier": ["warn"]
    }
  },
  "eslintIgnore": ["js/vendor*", "assets*", "fonts*", "Gruntfile.js"]
}
